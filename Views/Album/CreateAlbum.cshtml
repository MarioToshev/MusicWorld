@model MusicWorld.Models.AlbumViewModel

@{
    ViewData["Title"] = "Create a album";
}
<h1 class="mainColor">Add an Album</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Album" asp-action="CreateAlbum" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="titleInput" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfCreation" class="control-label">Day Of Creation</label>
                <input asp-for="DayOfCreation" class="date" />
                <span asp-validation-for="DayOfCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
