@model MusicWorld.Models.ArtistViewModel

@{
    ViewData["Title"] = "Create a artist";
}
<h1 class="mainColor">Add an Artist</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Artist" asp-action="CreateArtist" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="titleInput" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="post-comm-description"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="uploadImg">
                <input asp-for="PhotoUrl" type="file" name="file" accept=".pgn,.mp4,.mp3,.jpeg,.gif,.jfif,.mp3,.ogg,.wav,.aac,.mkv,.webm,.mov">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
